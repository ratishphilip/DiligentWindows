<Page x:Class="DiligentWindows.Views.QuickActionsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:DiligentWindows.Views"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      xmlns:xaml="using:Microsoft.Graphics.Canvas.UI.Xaml"
      xmlns:wpfSpark="using:WPFSpark"
      Background="Gray">
    <Page.Resources>
        <Storyboard x:Name="SwipeDownSB">
            <DoubleAnimation x:Name="SwipeDownAnim"
                             Storyboard.TargetName="panelTrans"
                             Storyboard.TargetProperty="Y"
                             To="0"
                             Duration="00:00:00.2"></DoubleAnimation>
            <ObjectAnimationUsingKeyFrames EnableDependentAnimation="True"
                                           Storyboard.TargetName="ExpandTB"
                                           Storyboard.TargetProperty="Text">
                <DiscreteObjectKeyFrame KeyTime="0"
                                        Value="Collapse"></DiscreteObjectKeyFrame>
            </ObjectAnimationUsingKeyFrames>
            <ObjectAnimationUsingKeyFrames EnableDependentAnimation="True"
                                           Storyboard.TargetName="ExpandGlyphTB"
                                           Storyboard.TargetProperty="Text">
                <DiscreteObjectKeyFrame KeyTime="0"
                                        Value="&#xE018;"></DiscreteObjectKeyFrame>
            </ObjectAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Name="SwipeUpSB">
            <DoubleAnimation x:Name="SwipeUpAnim"
                             Storyboard.TargetName="panelTrans"
                             Storyboard.TargetProperty="Y"
                             To="-270"
                             Duration="00:00:00.2"></DoubleAnimation>
            <ObjectAnimationUsingKeyFrames EnableDependentAnimation="True"
                                           Storyboard.TargetName="ExpandTB"
                                           Storyboard.TargetProperty="Text">
                <DiscreteObjectKeyFrame KeyTime="0"
                                        Value="Expand"></DiscreteObjectKeyFrame>
            </ObjectAnimationUsingKeyFrames>
            <ObjectAnimationUsingKeyFrames EnableDependentAnimation="True"
                                           Storyboard.TargetName="ExpandGlyphTB"
                                           Storyboard.TargetProperty="Text">
                <DiscreteObjectKeyFrame KeyTime="0"
                                        Value="&#xE019;"></DiscreteObjectKeyFrame>
            </ObjectAnimationUsingKeyFrames>
        </Storyboard>

        <Storyboard x:Name="ConceptShowSB">
            <!-- Show Concept details -->
            <DoubleAnimation Storyboard.TargetName="ConceptTrans"
                             Storyboard.TargetProperty="X"
                             To="0"
                             Duration="00:00:00.7">
                <DoubleAnimation.EasingFunction>
                    <BackEase Amplitude="0.3"
                              EasingMode="EaseOut"></BackEase>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="ConceptBorder"
                             Storyboard.TargetProperty="Opacity"
                             To="1"
                             Duration="00:00:00.7"></DoubleAnimation>
            <!-- Show Instruction One -->
            <DoubleAnimation Storyboard.TargetName="InstOneTrans"
                             BeginTime="00:00:03"
                             Storyboard.TargetProperty="X"
                             To="0"
                             Duration="00:00:00.7">
                <DoubleAnimation.EasingFunction>
                    <BackEase Amplitude="0.3"
                              EasingMode="EaseOut"></BackEase>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="InstructionOne"
                             Storyboard.TargetProperty="Opacity"
                             BeginTime="00:00:02.5"
                             To="1"
                             Duration="00:00:00.7"></DoubleAnimation>

            <!-- Show Explanation -->
            <DoubleAnimation Storyboard.TargetName="ExplTrans"
                             BeginTime="00:00:08"
                             Storyboard.TargetProperty="X"
                             To="0"
                             Duration="00:00:00.7">
                <DoubleAnimation.EasingFunction>
                    <BackEase Amplitude="0.3"
                              EasingMode="EaseOut"></BackEase>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="ExplanationOne"
                             Storyboard.TargetProperty="Opacity"
                             BeginTime="00:00:08"
                             To="1"
                             Duration="00:00:00.7"></DoubleAnimation>
        </Storyboard>
    </Page.Resources>
