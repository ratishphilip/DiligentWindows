        <Border x:Name="ConceptBorder"
                Width="330"
                Height="50"
                Background="#c1b49a"
                CornerRadius="5"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="20"
                Opacity="0">
            <Border.RenderTransform>
                <TransformGroup>
                    <TranslateTransform x:Name="ConceptTrans"
                                        X="-1000"></TranslateTransform>
                </TransformGroup>
            </Border.RenderTransform>
            <TextBlock Margin="8,-2,8,2"
                       VerticalAlignment="Center"
                       TextWrapping="WrapWholeWords"
                       Text="This concept shows how the Login experience should be in a Windows 10 Mobile."
                       Foreground="Black"
                       FontSize="16"
                       FontWeight="Light"></TextBlock>
        </Border>

        <Border x:Name="InstructionOne"
                Width="360"
                Height="60"
                Background="#c1b49a"
                CornerRadius="5"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Opacity="0"
                Margin="20,100">
            <Border.RenderTransform>
                <TransformGroup>
                    <TranslateTransform x:Name="InstOneTrans"
                                        X="-1000"></TranslateTransform>
                </TransformGroup>
            </Border.RenderTransform>
            <TextBlock Margin="8,-2,8,2"
                       VerticalAlignment="Center"
                       TextWrapping="WrapWholeWords"
                       Text="Tap/Click on the image to swipe up the LockScreen"
                       Foreground="Black"
                       FontStyle="Italic"
                       FontSize="16"
                       FontWeight="Light"></TextBlock>
        </Border>

        <Border x:Name="InstructionTwo"
                Width="270"
                Height="60"
                Background="#c1b49a"
                CornerRadius="5"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Opacity="0"
                Margin="20,190"
                Tapped="OnResetLockscreenTapped">
            <Border.RenderTransform>
                <TransformGroup>
                    <TranslateTransform x:Name="InstTwoTrans"
                                        X="-1000"></TranslateTransform>
                </TransformGroup>
            </Border.RenderTransform>
            <TextBlock Margin="8,-2,8,2"
                       VerticalAlignment="Center"
                       TextWrapping="WrapWholeWords"
                       Text="Tap/Click here to reset the LockScreen"
                       Foreground="Black"
                       FontStyle="Italic"
                       FontSize="16"
                       FontWeight="Light"></TextBlock>
        </Border>

        <Border Grid.Column="2"
                x:Name="ExplanationOne"
                Width="360"
                Background="#c1b49a"
                CornerRadius="5"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Opacity="0"
                Margin="20,100">
            <Border.RenderTransform>
                <TransformGroup>
                    <TranslateTransform x:Name="ExplTrans"
                                        X="1000"></TranslateTransform>
                </TransformGroup>
            </Border.RenderTransform>
            <StackPanel Margin="4">
                <TextBlock Margin="4,4"
                           VerticalAlignment="Center"
                           TextAlignment="Justify"
                           TextWrapping="WrapWholeWords"
                           Text="User image and name added to login screen to maintain consistency with PC Login screen."
                           Foreground="Black"
                           FontStyle="Italic"
                           FontSize="16"
                           FontWeight="Light"></TextBlock>
                <TextBlock Margin="4,16,4,0"
                           TextAlignment="Justify"
                           VerticalAlignment="Center"
                           TextWrapping="WrapWholeWords"
                           Text="The background image is blurred to enhance the user details and to focus the user attention to enter the PIN."
                           Foreground="Black"
                           FontStyle="Italic"
                           FontSize="16"
                           FontWeight="Light"></TextBlock>
                <TextBlock Margin="4,16,4,0"
                           TextAlignment="Justify"
                           VerticalAlignment="Center"
                           TextWrapping="WrapWholeWords"
                           Text="The digits are larger and widely spaced. The buttons encapsulating the digits are round shaped because the touch impression on a screen is mostly round."
                           Foreground="Black"
                           FontStyle="Italic"
                           FontSize="16"
                           FontWeight="Light"></TextBlock>
                <TextBlock Margin="4,16,4,4"
                           TextAlignment="Justify"
                           VerticalAlignment="Center"
                           TextWrapping="WrapWholeWords"
                           Text="Screen space is available to accommodate Windows Hello."
                           Foreground="Black"
                           FontStyle="Italic"
                           FontSize="16"
                           FontWeight="Light"></TextBlock>
            </StackPanel>
            
        </Border>

    </Grid>
</Page>
