                                    Width="100"
                                    Height="100"
                                    Content="3"
                                    Style="{StaticResource RoundButtonStyle}"
                                    Click="OnAddPassword"></Button>
                            <Button Grid.Row="1"
                                    Grid.Column="1"
                                    Width="100"
                                    Height="100"
                                    Content="4"
                                    Style="{StaticResource RoundButtonStyle}"
                                    Click="OnAddPassword"></Button>
                            <Button Grid.Row="1"
                                    Grid.Column="3"
                                    Width="100"
                                    Height="100"
                                    Content="5"
                                    Style="{StaticResource RoundButtonStyle}"
                                    Click="OnAddPassword"></Button>
                            <Button Grid.Row="1"
                                    Grid.Column="5"
                                    Width="100"
                                    Height="100"
                                    Content="6"
                                    Style="{StaticResource RoundButtonStyle}"
                                    Click="OnAddPassword"></Button>
                            <Button Grid.Row="2"
                                    Grid.Column="1"
                                    Width="100"
                                    Height="100"
                                    Content="7"
                                    Style="{StaticResource RoundButtonStyle}"
                                    Click="OnAddPassword"></Button>
                            <Button Grid.Row="2"
                                    Grid.Column="3"
                                    Width="100"
                                    Height="100"
                                    Content="8"
                                    Style="{StaticResource RoundButtonStyle}"
                                    Click="OnAddPassword"></Button>
                            <Button Grid.Row="2"
                                    Grid.Column="5"
                                    Width="100"
                                    Height="100"
                                    Content="9"
                                    Style="{StaticResource RoundButtonStyle}"
                                    Click="OnAddPassword"></Button>
                            <Button Grid.Row="3"
                                    Grid.Column="3"
                                    Width="100"
                                    Height="100"
                                    Content="0"
                                    Style="{StaticResource RoundButtonStyle}"
                                    Click="OnAddPassword"></Button>
                            <Button Grid.Row="3"
                                    Grid.Column="5"
                                    Width="100"
                                    Height="100"
                                    Margin="0,75,0,-75"
                                    Style="{StaticResource RoundButtonStyle}"
                                    Click="OnDeletePassword">
                                <Button.Content>
                                    <TextBlock x:Name="GlyphElement"
                                               AutomationProperties.AccessibilityView="Raw"
                                               Foreground="#ffffff"
                                               FontStyle="Normal"
                                               FontSize="28"
                                               FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                               HorizontalAlignment="Center"
                                               Text="&#xE750;"
                                               VerticalAlignment="Center" />
                                </Button.Content>
                            </Button>
                            <Button Grid.Row="3"
                                    Grid.Column="1"
                                    Width="100"
                                    Height="100"
                                    Margin="0,75,0,-75"
                                    Style="{StaticResource RoundButtonStyle}"
                                    Content="Emergency"
                                    FontSize="18"></Button>
                        </Grid>
                    </Grid>
                    <Grid x:Name="LSInfo"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch">
                        <Grid.RenderTransform>
                            <TranslateTransform Y="0"></TranslateTransform>
                        </Grid.RenderTransform>
                        <StackPanel HorizontalAlignment="Left"
                                    VerticalAlignment="Bottom">
                            <TextBlock x:Name="timeTB"
                                       Foreground="White"
                                       FontSize="84"
                                       FontWeight="ExtraLight"
                                       Margin="10,6,10,-10"></TextBlock>
                            <TextBlock x:Name="dateTB"
                                       Foreground="White"
                                       FontSize="32"
                                       FontWeight="Light"
                                       Margin="10,0,10,80"></TextBlock>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Viewbox>
